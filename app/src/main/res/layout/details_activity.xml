<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/no_image_blank" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="2">


            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:text="Name"
                android:textColor="#000"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_name"
                android:fontFamily="sans-serif"
                android:paddingTop="8dp"
                android:text="₹ "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detail_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_name"
                android:layout_toRightOf="@+id/detail_price"
                android:fontFamily="sans-serif"
                android:paddingTop="8dp"
                android:text="25"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detail_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_price"
                android:fontFamily="sans-serif"
                android:text="Quantity left:  "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detail_quantity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_price"
                android:layout_toRightOf="@+id/detail_quantity"
                android:fontFamily="sans-serif"
                android:text="25"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="8"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Adjust Quantity:"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#000" />

        <Button
            android:id="@+id/reduce_quatity"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="⬇"
            android:textSize="25sp"

            />

        <Button
            android:id="@+id/increase_quantity"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="⬆"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/order_more"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Order More" />


    </LinearLayout>

</LinearLayout>
    </ScrollView>